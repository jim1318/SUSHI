@import "whitespace-reset.css"
@import "mixins"

a
  cursor: pointer
  text-decoration: none
 
button
  cursor: pointer

ul, ol
  list-style: none
  
img
  border: 0
  
html
  font: 75% 'Droid Sans', sans-serif
  height: 100%
  background: #0c0c0c url('style_image/background-image.png') repeat left top
  
h1, h2, h3, #main-nav, #main-nav li, ul, ul li
  list-style: none outside none
  margin: 0
  padding: 0

body
  margin-top: 20px
  
div.container
  width:1000px
  margin: 60px auto;


// HEADER ----------------------------------------------------------

header
  padding-bottom: 40px
  border-bottom: 1px solid #535353;
  
h1.logo
  display: inline-block
  width: 140px;
  height: 32px
  background: url('style_image/logo.png') 0 0 no-repeat;
  a
    display: inline-block
    width: 100%
    height: 100%

a#cart-info
  text-decoration: none
  height: 28px
  line-height: 28px
  float: right
  color: #bababa
  vertical-align: middle
  text-transform: uppercase
  text-align: right
  background: #1f1f1f
  display: inline-block
  span
    display: inline-block
    padding: 0 28px 0 26px
    color: #ffffff
    height: 28px
    line-height: 28px
    font-size: 10px
    background: linear-gradient(to bottom, rgba(214,0,65,1) 0%,rgba(169,0,64,1) 100%);
    position: relative
    &:before
      content: ""
      display: block
      position: absolute
      border-top: 14px solid #1f1f1f
      border-right: 14px solid transparent
      border-bottom: 14px solid transparent
      border-left: 14px solid #1f1f1f
      width: 0
      height: 0
      left: 0
      top: 0
  

// MAIN ----------------------------------------------------------
main
  min-height: 500px
  &:after
    content: ""
    clear: both
    display: block
  
// MAIN CART SUMMARY ----------------------------------------------
#cart-summary
  width: 1000px
  margin: 0 auto 20px auto
  ul
    width: 800px
    text-align: right
    display: inline-block
    position: relative
    float: left
    li
      float: left
      font-size: 10px
      color: #787878 
      position: relative
      a
        display: block
        position: relative
        img
          width: 100px
          height: 100px
        &:after
          content: ""
          width: 100px
          height: 100px
          top: 0
          left: 0
          background-color: rgba(0,0,0,0)
          position: absolute
        &:hover:after
          background-color:  rgba(0,0,0,0.75)
          background-image: url('style_image/remove-icon.png')
          background-repeat: no-repeat
          background-position: 50% 50%
      span
        color: #ffffff
        font-size: 11px
      &: after
        content: ""
        clear: both
        display: block

  div
    float: right
    width: 200px

    color: #ffffff
    text-align: left
    background: #1f1f1f
    h3
      padding: 20px 0 0 14px
      maring 0 0 7px 0  
      color: #bababa
      font-size: 10px
    p
      color: #ffffff
      font-size: 30px
      padding: 0 20px 0 14px
    a
      text-decoration: none
      height: 28px
      display: inline-block
      line-height: 28px
      vertical-align: middle
      text-transform: uppercase
      text-align: right
    a#empty_cart
      width: 89px
      font-size: 10px
      color: #ff3170
    a#checkout
      padding: 0 18px 0 10px
      color: #ffffff
      width: 83px
      font-size: 10px
      background: linear-gradient(to bottom, rgba(214,0,65,1) 0%,rgba(169,0,64,1) 100%);
      position: relative
      &:before
        content: ""
        display: block
        position: absolute
        border-top: 14px solid #1f1f1f
        border-right: 14px solid transparent
        border-bottom: 14px solid transparent
        border-left: 14px solid #1f1f1f
        width: 0
        height: 0
        left: 0
        top: 0
  &:after
      content: ""
      clear: both
      display: block

//  MAIN ITEMS -----------------------------------------------------
#content ul.main
  li
    float: left
    position: relative
    width: 200px
    margin-bottom: 20px
    padding-botton: 62px
    background: #ffffff url('style_image/item-separator.png') repeat-y right top
    text-align: center
    box-sizing: content-box
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    a
      display: block
      color: #000000
      text-align: center
      box-sizing: content-box
      -webkit-tap-highlight-color: rgba(0,0,0,0);
      img
        width: 200px
        height: 200px
        -webkit-tap-highlight-color: rgba(0,0,0,0);
      strong
        display: inline-block
        color: #ab7829
        font-size: 21px
        font-weight: normal
        padding-top: 25px
        padding-bottom: 5px
        width: 100%;
        white-space: nowrap
        overflow: hidden
      span
        color: #9e9e9e
        font-size: 17px
      &:hover
        strong
          color: #000 
      &:after
        content: ""
        display: inline-block
        width: 200px
        height: 200px
        position: absolute
        top: 0
        left: 0
        background-color: rgba(0, 0, 0, 0)
      &:hover:after
        background-color:  rgba(0,0,0,0.75);
        background-image: url('style_image/arrow-right.png');
        background-repeat: no-repeat;
        background-position: 50% 50%;

    button
      height: 37px
      width: 200px
      padding-bottom: 3px
      color: #d60041
      font-size: 12px
      margin-top: 20px
      text-transform: uppercase
      border: 0px
      border-top: 1px dotted #a6a6a6
      background-color: transparent
      box-sizing: border-box
      &:before
        content: "+ ";
        font-size: 14px
        font-weight: bold
      &:hover
        color: #ffffff
        background-color: #d60041
        
//  DETAIL ITEMS -----------------------------------------------------
#item_details
  background: url('style_image/sushi-preview.png') no-repeat top left;
  width: 1000px
  height: 600px
  display: block
  position: relative
  #item_bar
    width: 1000px
    height: 200px
    position: absolute
    top: 200px
    z-index: 1
    background: #000000
    #left_nav, img, #item_summary, #item_facts, #right_nav
      display: inline-block
      height: 200px
      vertical-align: top
    #left_nav, #right_nav
      width: 100px
      background-repeat: no-repeat;
      background-position: 50% 50%;
      &:hover
        background-color: #d60041
    #left_nav
      background-image: url('style_image/nav-prev.png')
    #right_nav
      background-image: url('style_image/nav-next.png')
    #item_summary
      width: 400px
      h1
        font-size: 30px
        color: grey
    #item_facts
      width: 200px
    p
      color: white
      

//  CHECKOUT -----------------------------------------------------
#checkout
  background: url('style_image/sushi-preview.png') top left;
  width: 1000px
  height: 1000px
  display: block
  position: relative
  #check_bar
    width: 1000px
    padding-left: 100px
    box-sizing: border-box
    height: 700px
    position: absolute
    top: 150px
    z-index: 1
    background: #ffffff
    th
      font-size: 13px
      color: #4a4a4a
      text-align: left
      border-bottom: 1px solid #dadada
      font-weight: bold
      text-transform: uppercase
    tr 
      border-bottom: 1px solid #dadada
      max-height: 100px
    h1
      font-size: 36px
      color: #2e2e2e
      padding: 50px 0 53px 100px
      text-align: left
    h2
      max-width: 250px
      height: 100px
      line-height: 100px
      font-size: 21px
      color: #232323
    h3
      font-size: 21px
      color: #232323 
      padding-left: 100px   
    input
      height: 1.65em
      line-height: 1.65em
      width: 125px
    p
      padding-left: 500px
      span
        font-size: 30px

    .checkout_image
      height: 100px
      overflow:hidden
    img
      padding: 0 40px 0 0
      width: 200px
      height: 200px
    p.quantity
      padding: 0 10px
      font-size: 20px
      width: 20px
      display: inline-block
    a.subtract, a.add
      text-decoration: none
      width: 20px
      background: orange
      display: inline-block
      text-align: center
      font-weight: bold
      padding: 0
    a
      font-size: 25px
      display: inline-block;
      width: 200px
      margin-top: 20px
      padding-right: 10px
      border-radius: 5px
      background: #9BC2CF
      border: 1px solid black
      text-decoration: none
      text-align: center
      color: black
     
// ADMIN VIEW
#admin
  float: left
  border: 2px solid orange
  border-radius: 5px
  margin-bottom: 10px
  ul
    padding: 5px
  li
    display: block
    border: 1px solid grey
    margin-bottom: 3px
    width: 400px
    background: white

  p, a, h1
    display: inline-block
    padding: 5px
    text-align: left 
    color: blue
    text-decoration: none
  h1
    width: 150px
    font-size: 14px
    font-weight: bold

#edit_item
  float: left
  border: 2px solid orange
  border-radius: 5px
  margin-left: 10px
  min-width: 400px
  min-height: 600px
  img
    display: block
    margin:10px auto
  dl
    width: 200px
    display: block
    margin:10px auto
  p, a, label
    color: yellow
  a
    width: 100px
    font-size: 20px
    background: grey
    padding: 10px
    border: 2px dotted blue
    border-radius: 5px
    display: block
    margin:10px auto
  


// FOOTER ----------------------------------------------------------
footer
  border-top: 1px solid #535353
  font-size: 12px
  padding-bottom: 60px
  color: #999
  p
    margin: 10px 0